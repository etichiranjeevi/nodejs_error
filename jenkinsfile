pipeline {
    agent any

   environment {
       PORT=8000
   }

    stages {
        stage('Clone') {
            steps {
                git branch: 'main', url: 'https://github.com/etichiranjeevi/nodejs_error.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }

        stage('Deploy to EC2') {
            steps {
                // Copy project files to target EC2
                sh 'scp -o StrictHostKeyChecking=no -r * ubuntu@34.207.148.68:/home/ubuntu/jen-shopping/'

                // Restart app with pm2
               sh "ssh ubuntu@34.207.148.68 'cd /home/ubuntu/jen-shopping && npm install && /usr/bin/pm2 delete shopping-app || true && PORT=8000 /usr/bin/pm2 start app.js --name shopping-app && pm2 save'"

            }
        }
    }
}
